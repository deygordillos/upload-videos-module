{
  "name": "simpledatacorp/sdc-video-upload-api",
  "description": "Secure REST API for multi-project video management",
  "type": "project",
  "license": "SDC",
  "version": "1.0.0",
  "autoload": {
    "psr-4": {
      "App\\": "app/",
      "Libraries\\": "libraries/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "test:unit": "phpunit --testsuite \"Unit Tests\"",
    "test:integration": "phpunit --testsuite \"Integration Tests\"",
    "test:coverage": "phpunit --coverage-html coverage",
    "lint": "phpcs --standard=PSR12 app/",
    "lint:fix": "phpcbf --standard=PSR12 app/",
    "analyse": "phpstan analyse --memory-limit=1G",
    "phpstan": "phpstan analyse --memory-limit=1G"
  },
  "require": {
    "php": "^8.3.16",
    "ext-pdo": "*",
    "ext-pdo_mysql": "*",
    "ext-fileinfo": "*",
    "ext-json": "*",
    "slim/slim": "4.*",
    "slim/psr7": "^1.3",
    "phpmailer/phpmailer": "^6.2",
    "vlucas/phpdotenv": "^5.6"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5",
    "phpstan/phpstan": "^1.10",
    "squizlabs/php_codesniffer": "^3.8"
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true
  }
}
