{
  "info": {
    "name": "Video Upload API",
    "description": "Collection para pruebas de la API de carga de videos",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "_exporter_id": "video-upload-api"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8270/api",
      "type": "string"
    },
    {
      "key": "api_key",
      "value": "dev-api-key-123",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/health",
          "host": ["{{base_url}}"],
          "path": ["health"]
        },
        "description": "Verifica el estado del servicio y la conexión a la base de datos"
      }
    },
    {
      "name": "Upload Video",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "X-API-Key",
            "value": "{{api_key}}",
            "type": "text"
          }
        ],
        "body": {
          "mode": "formdata",
          "formdata": [
            {
              "key": "video",
              "type": "file",
              "src": "/path/to/video.mp4",
              "description": "Archivo de video a subir (máx 500MB)"
            },
            {
              "key": "project_id",
              "value": "PROJECT_TEST",
              "type": "text",
              "description": "ID del proyecto (alfanumérico, guiones y guiones bajos)"
            },
            {
              "key": "video_identifier",
              "value": "VIDEO_001",
              "type": "text",
              "description": "Identificador único del video"
            },
            {
              "key": "metadata",
              "value": "{\"user_id\":\"123\",\"device\":\"Android\",\"version\":\"1.0\"}",
              "type": "text",
              "description": "Metadata adicional en formato JSON (opcional)"
            }
          ]
        },
        "url": {
          "raw": "{{base_url}}/videos/upload",
          "host": ["{{base_url}}"],
          "path": ["videos", "upload"]
        },
        "description": "Sube un nuevo video al sistema"
      }
    },
    {
      "name": "Get Video by ID",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "X-API-Key",
            "value": "{{api_key}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{base_url}}/videos/1",
          "host": ["{{base_url}}"],
          "path": ["videos", "1"],
          "variable": [
            {
              "key": "id",
              "value": "1",
              "description": "ID del video"
            }
          ]
        },
        "description": "Obtiene la información de un video específico por su ID"
      }
    },
    {
      "name": "Get Videos by Project",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "X-API-Key",
            "value": "{{api_key}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{base_url}}/videos/project/PROJECT_TEST?page=1&per_page=50",
          "host": ["{{base_url}}"],
          "path": ["videos", "project", "PROJECT_TEST"],
          "query": [
            {
              "key": "page",
              "value": "1",
              "description": "Número de página (default: 1)"
            },
            {
              "key": "per_page",
              "value": "50",
              "description": "Videos por página (default: 50, máx: 100)"
            }
          ],
          "variable": [
            {
              "key": "project_id",
              "value": "PROJECT_TEST",
              "description": "ID del proyecto"
            }
          ]
        },
        "description": "Lista todos los videos de un proyecto específico con paginación"
      }
    },
    {
      "name": "Delete Video",
      "request": {
        "method": "DELETE",
        "header": [
          {
            "key": "X-API-Key",
            "value": "{{api_key}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{base_url}}/videos/1",
          "host": ["{{base_url}}"],
          "path": ["videos", "1"],
          "variable": [
            {
              "key": "id",
              "value": "1",
              "description": "ID del video a eliminar"
            }
          ]
        },
        "description": "Elimina un video (soft delete - no elimina el archivo físico)"
      }
    },
    {
      "name": "Upload Video - Error: No API Key",
      "request": {
        "method": "POST",
        "header": [],
        "body": {
          "mode": "formdata",
          "formdata": [
            {
              "key": "video",
              "type": "file",
              "src": "/path/to/video.mp4"
            },
            {
              "key": "project_id",
              "value": "PROJECT_TEST",
              "type": "text"
            },
            {
              "key": "video_identifier",
              "value": "VIDEO_001",
              "type": "text"
            }
          ]
        },
        "url": {
          "raw": "{{base_url}}/videos/upload",
          "host": ["{{base_url}}"],
          "path": ["videos", "upload"]
        },
        "description": "Prueba de error - Sin API Key (debe retornar 401)"
      }
    },
    {
      "name": "Upload Video - Error: Invalid API Key",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "X-API-Key",
            "value": "invalid-key",
            "type": "text"
          }
        ],
        "body": {
          "mode": "formdata",
          "formdata": [
            {
              "key": "video",
              "type": "file",
              "src": "/path/to/video.mp4"
            },
            {
              "key": "project_id",
              "value": "PROJECT_TEST",
              "type": "text"
            },
            {
              "key": "video_identifier",
              "value": "VIDEO_001",
              "type": "text"
            }
          ]
        },
        "url": {
          "raw": "{{base_url}}/videos/upload",
          "host": ["{{base_url}}"],
          "path": ["videos", "upload"]
        },
        "description": "Prueba de error - API Key inválido (debe retornar 401)"
      }
    },
    {
      "name": "Upload Video - Error: Missing Fields",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "X-API-Key",
            "value": "{{api_key}}",
            "type": "text"
          }
        ],
        "body": {
          "mode": "formdata",
          "formdata": [
            {
              "key": "video",
              "type": "file",
              "src": "/path/to/video.mp4"
            }
          ]
        },
        "url": {
          "raw": "{{base_url}}/videos/upload",
          "host": ["{{base_url}}"],
          "path": ["videos", "upload"]
        },
        "description": "Prueba de error - Campos requeridos faltantes (debe retornar 400)"
      }
    },
    {
      "name": "Get Video - Not Found",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "X-API-Key",
            "value": "{{api_key}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{base_url}}/videos/99999",
          "host": ["{{base_url}}"],
          "path": ["videos", "99999"]
        },
        "description": "Prueba de error - Video no encontrado (debe retornar 404)"
      }
    }
  ],
  "auth": {
    "type": "apikey",
    "apikey": [
      {
        "key": "value",
        "value": "{{api_key}}",
        "type": "string"
      },
      {
        "key": "key",
        "value": "X-API-Key",
        "type": "string"
      }
    ]
  }
}
